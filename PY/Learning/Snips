# are we running as a script?
if __name__ == '__main__':
    name = input('Please enter your name: ')
    print(f'Hello {name}, and welcome to Python')
    a = int(input('Please enter a number: '))
    b = int(input('Please enter another number: '))
    print(f'{a} * {b} = {a*b}')
    print(f'{a} << {b} = {a<<b}')
